<h1>Longest word game</h1>

<table id="letters">
  <% @letters.each do |l| %>
    <th><%= "#{l}" %></th>
  <% end %>
</table>

<p>What's the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type here...">
  <input type="submit">
</form>
